{
  "name": "@parcellab/repo-template-ts-lib",
  "version": "0.0.0",
  "description": "Specific parcelLab configuration for TypeScript libraries",
  "author": "engineering@parcellab.com",
  "main": "dist/index.js",
  "type": "module",
  "keywords": [
    "example",
    "template"
  ],
  "engines": {
    "node": ">=v18"
  },
  "engineStrict": true,
  "publishConfig": {
    "@parcellab:registry": "https://npm.pkg.github.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/parcelLab/repo-template-ts-lib.git"
  },
  "devDependencies": {
    "@commitlint/cli": "17.4.2",
    "@commitlint/config-conventional": "17.4.2",
    "@parcellab/eslint-config": "^0.5.2",
    "@types/eslint": "^8.4.10",
    "@types/is-ci": "^3.0.0",
    "@typescript-eslint/eslint-plugin": "^5.49.0",
    "@typescript-eslint/parser": "^5.49.0",
    "c8": "^7.12.0",
    "eslint": "^8.32.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-unicorn": "^45.0.2",
    "husky": "^8.0.3",
    "is-ci": "^3.0.1",
    "lint-staged": "^13.1.0",
    "prettier": "^2.8.3"
  },
  "dependencies": {
    "@types/node": "^18.11.18",
    "ts-node": "^10.9.1"
  },
  "scripts": {
    "build": "tsc",
    "commitlint": "commitlint -x @commitlint/config-conventional --edit",
    "format": "prettier --write --ignore-unknown .",
    "lint:eslint": "eslint .",
    "lint:prettier": "prettier --check --ignore-unknown .",
    "lint:staged": "lint-staged",
    "lint:types": "tsc --noEmit",
    "lint": "npm run lint:types && npm run lint:eslint && npm run lint:prettier",
    "prepare": "test \"$NODE_ENV\" = production || is-ci || husky install",
    "test": "c8 --all node --test --loader ts-node/esm ./test/**.ts"
  },
  "c8": {
    "branches": 100,
    "check-coverage": true,
    "clean": true,
    "functions": 100,
    "lines": 100,
    "reporter": [
      "html",
      "text"
    ],
    "include": [
      "lib"
    ]
  }
}
